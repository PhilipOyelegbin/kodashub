generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  first_name   String
  last_name    String
  phone_number String
  password     String
  invoices     Invoice[]
  hosting      Hosting[]
  development  Development[]
  role         Role          @default(USER)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("users")
}

model Invoice {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  price     Int
  status    Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Hosting {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  price     String
  url       String?
  status    Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Development {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  price     String
  status    Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Offerings {
  id          String   @id @default(uuid())
  plan        String
  description String?
  amount      Int
  features    String[]
  category    Category @default(UNCATEGORIZED)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("offerings")
}

enum Role {
  USER
  ADMIN
}

enum Category {
  DOMAIN
  HOSTING
  DEVELOPMENT
  UNCATEGORIZED
}
